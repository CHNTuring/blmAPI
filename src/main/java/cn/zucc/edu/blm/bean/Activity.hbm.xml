<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.zucc.edu.blm.bean.Activity" table="activity" schema="blm">
        <id name="activityId" column="activity_id"/>
        <property name="shopId" column="shop_id"/>
        <property name="fullMoney" column="full_money"/>
        <property name="reduceMoney" column="reduce_money"/>
    </class>
</hibernate-mapping>