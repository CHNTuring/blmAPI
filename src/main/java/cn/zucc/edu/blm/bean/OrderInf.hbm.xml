<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.zucc.edu.blm.bean.OrderInf" table="order_inf" schema="blm">
        <id name="orderInfId" column="order_inf_id"/>
        <property name="recipeId" column="recipe_id"/>
        <property name="orderId" column="order_id"/>
        <property name="listId" column="list_id"/>
        <property name="orderRecipeNumber" column="order_recipe_number"/>
    </class>
</hibernate-mapping>